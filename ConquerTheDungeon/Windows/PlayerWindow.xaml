<Window x:Class="ConquerTheDungeon.Windows.PlayerWindow"
        Closed="Window_Closed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquerTheDungeon.Windows"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Strength, StringFormat=Strength: {0}}" Grid.Row="2" FontSize="25" TextAlignment="Center" FontFamily="Segoe UI Black"/>
        <TextBlock Text="{Binding Agility, StringFormat=Agility: {0}}" Grid.Row="3" FontSize="25" TextAlignment="Center" FontFamily="Segoe UI Black"/>
        <TextBlock Text="{Binding Intelligence, StringFormat=Intelligence: {0}}" Grid.Row="4" FontSize="25" TextAlignment="Center" FontFamily="Segoe UI Black"/>
        <TextBlock Text="{Binding Endurance, StringFormat=Endurance: {0}}" Grid.Row="5"  FontSize="25" TextAlignment="Center" FontFamily="Segoe UI Black"/>
    </Grid>
</Window>
